<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_person"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/lb_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

            <ImageButton
                android:id= "@+id/ibtn_logout"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/logout" />

            <TextView
                android:id="@+id/lb_title_conta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lb_name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:text="Conta"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lb_conta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lb_title_conta"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/lb_title_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lb_conta"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:text="Saldo"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lb_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lb_title_saldo"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_person">

            <TextView
                android:id="@+id/lb_headerlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:text="Recentes"
                android:textColor="#485465"
                android:textSize="17sp" />

            <ListView
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lb_headerlist"
                android:layout_margin="16dp"
                android:background="#FEFEFE"
                android:divider="#FEFEFE"
                android:dividerHeight="10dp"/>

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>